{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "lib": ["dom", "ES2015"],
      "moduleResolution": "node",
      "noEmit": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "strict": true,
      "sourceMap": true,
      "target": "ES2015",
      "preserveConstEnums": true,
      "noImplicitAny": false,
      "removeComments": true,
      "module": "ES2015",
      "outDir": "./build/"
    },
    "include": ["**/src/**/*.ts", "**/src/**/*.tsx", "App.tsx"],
    "exclude": ["node_modules", "babel.config.js", "prettier.config.js"]
  }
