{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "jsx": "react",
    "lib": ["dom", "ES2020"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "target": "ES6",
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES2020",
    "outDir": "./build/"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "prettier.config.js",
    "webpack.config.js",
    "jest.config.js"
  ]
}
