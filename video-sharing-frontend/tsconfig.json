{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": [
      "dom",
      "ES2020"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "target": "ES2020",
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "removeComments": true,
    "module": "ES2020",
    "outDir": "./build/"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "prettier.config.js",
    "webpack.config.js"
  ]
}
